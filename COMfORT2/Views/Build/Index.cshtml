@model COMfORT2.Controllers.PageViewModel

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>COMfORT 2 - Viewer</title>
    <!--stylesheets-->
    <link rel="stylesheet" href="~/fonts/FiraSans/Fonts.css">
    <link href="~/Content/css/themes.css" rel="stylesheet" />
    <link href="~/Content/css/base.css" rel="stylesheet" />
    <link href="~/Content/css/pageContent.css" rel="stylesheet" />

    <!--scripts-->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script>
        var ConfigXml;
        var PageContent = [];
        var ScaleRatio = 1;
        var CurrentLocation;
        var URL_Content = '@Url.Content("~/")';
        var xml = $.parseXML(`@Html.Raw(Model.XmlContent)`);
        var URL_UploadAsset = '@Url.Action("UploadAsset")';
        var URL_ViewEditor = '@Url.Action("ViewEditor", new { id = Model.PageId })';
        var URL_ViewAssets = '@Url.Action("ViewAssets", new { id = Model.PageId })';
        var URL_SavePage = '@Url.Action("SavePage")';
        var URL_GoHome = '@Url.Action("Index", "Default")';

        var URL_LoadFile = '@Url.Action("LoadFile", "View")';

    </script>
    <script src="~/Content/js/viewer.js"></script>
    <script src="~/Content/js/navigation.js"></script>
    <script src="~/Content/js/base.js"></script>
    <script src="~/Content/js/loading.js"></script>
    <script src="~/Content/js/shared.js"></script>
    <script src="~/Content/js/validate.js"></script>
    <!-- For offline switch the src for each script, and include offline.js -->
</head>

<body>
    <div id="main-window">

        <div id="content">
            <div id="header">
                <div id="top-bar">
                    <div>Page name: <b>@Model.PageName</b></div>
                    <a href="javascript:void(0)" id="shell-assets">view assets</a>
                    <a href="javascript:void(0)" id="editor">editor</a>
                </div>
                <div id="sections">
                    <div id="section-list"></div>
                </div>
                <div id="chapters">
                    <div id="chapter-list"></div>
                </div>
            </div>

            <div id="page-content" style="border:1px solid black;">
                <div id="definitionWindow"></div>
            </div>

            <div id="footer">
                @Html.HiddenFor(x => x.PageId)
                @Html.HiddenFor(x => x.PageName)
                <button id="submit-page" type="submit">Save Page</button>
            </div>
        </div>


    </div>
</body>
</html>